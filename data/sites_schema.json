{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"patternProperties": {
		"^[^\"\/\\\n]+$": {
			"properties": {
				"alias": {
					"type": "string"
				},
				"chars": {
					"type": "string",
					"pattern": "^(?!.*(.).*\\1).+$"
				},
				"maxLength": {
					"minimum": 1,
					"type": "integer"
				},
				"minLength": {
					"minimum": 1,
					"type": "integer"
				},
				"regex": {
					"type": "string",
					"format": "regex"
				},
				"requirements": {
					"type": "array",
					"minItems": 1,
					"maxItems": 4,
					"uniqueItems": true,
					"items": {
						"type": "string"
					}
				}

			},
			"type": "object",
			"additionalProperties": false
		}
	}
}